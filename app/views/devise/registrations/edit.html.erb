<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow-sm">
        <div class="card-body p-4">
          <h2 class="text-center mb-4">Edit Your Profile</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
               html: { method: :put, multipart: true }) do |f| %>

            <% if resource.respond_to?(:avatar) && resource.avatar.attached? && resource.persisted? %>
              <% begin %>
                <div class="mb-3 text-center">
                  <%= image_tag url_for(resource.avatar), class: "rounded-circle shadow-sm", alt: "Avatar", style: "width: 100px; height: 100px; object-fit: cover;" %>
                </div>
              <% rescue => e %>
              <% end %>
            <% else %>
              <div class="mb-3 text-center">
                <%= image_tag "default_avatar.png", class: "rounded-circle shadow-sm", alt: "Default Avatar", style: "width: 100px; height: 100px; object-fit: cover;" %>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.label :avatar, "Change Profile Picture", class: "form-label" %>
              <%= f.file_field :avatar, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Your email" %>
            </div>

            <hr>

            <div class="mb-3">
              <%= f.label :password, "New Password", class: "form-label" %>
              <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Leave blank if unchanged" %>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, class: "form-label" %>
              <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm new password" %>
            </div>

            <div class="mb-3">
              <%= f.label :current_password, "Current Password", class: "form-label" %>
              <%= f.password_field :current_password, autocomplete: "off", class: "form-control", placeholder: "Required to save changes" %>
            </div>

            <div class="d-grid">
              <%= f.submit "Update Profile", class: "btn btn-primary" %>
            </div>
          <% end %>

          <div class="text-center mt-3">
            <%= link_to "← Back to Dashboard", dashboard_path, class: "btn btn-outline-secondary btn-sm" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
