<h1 class="text-center mb-4">Edit Experiences</h1>
<div class="card mx-auto" style="max-width: 600px;">
  <div class="card-body">
    <%= simple_form_for @experience, html: { class: "needs-validation" } do |f| %>
      <div class="mb-3">
        <%= f.input :title, input_html: { class: "form-control" }, label_html: { class: "form-label" } %>
      </div>
      <div class="mb-3">
        <%= f.input :description, input_html: { class: "form-control" }, label_html: { class: "form-label" } %>
      </div>
      <div class="mb-3">
        <%= f.input :location, input_html: { class: "form-control" }, label_html: { class: "form-label" } %>
      </div>
      <div class="mb-3">
        <%= f.input :seats, input_html: { class: "form-control", min: 1 }, label_html: { class: "form-label" }, as: :integer %>
      </div>
      <div class="mb-3">
        <%= f.input :price, input_html: { class: "form-control", step: "0.01", min: 0 }, label_html: { class: "form-label" }, as: :decimal %>
      </div>
      <div class="mb-3">
        <%= f.input :category, input_html: { class: "form-control" }, label_html: { class: "form-label" } %>
      </div>
      <div class="mb-3">
        <%= f.input :start_time, html5: true, input_html: { class: "form-control" }, label_html: { class: "form-label" } %>
      </div>
      <div class="mb-3">
        <%= f.input :end_time, html5: true, input_html: { class: "form-control" }, label_html: { class: "form-label" } %>
      </div>
      <%= f.button :submit, 'Update Experience', class: "btn btn-primary w-100" %>
    <% end %>
  </div>
</div>

