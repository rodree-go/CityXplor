<div class="container my-5">
  <h1 class="text-center mb-4">Available Experiences</h1>

  <div class="row">
    <% @experiences.each do |experience| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
          <%= image_tag(experience.img_url.presence || "https://picsum.photos/seed/#{experience.id}/400/250", class: "card-img-top") %>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= experience.title %></h5>
            <p class="card-text"><%= truncate(experience.description, length: 100) %></p>
            <%= link_to "View Experience", experience_path(experience), class: "btn btn-primary mt-auto" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
