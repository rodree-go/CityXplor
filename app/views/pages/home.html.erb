<!-- Portada -->
<div class="cover d-flex align-items-center justify-content-center text-white text-center" style="height: 600px; background-image: url(<%= asset_path('cover_cityxplor.png') %>); background-size: cover; background-position: center;">
  <div>
  </div>
</div>

<!-- EXPERIENCIAS -->
<div class="container my-5">
  <h2 class="mb-4 text-center">Experiences</h2>
  <div class="row justify-content-center">
    <% @experiences.each do |experience| %>
      <div class="col-md-4 d-flex">
        <div class="card mb-4 shadow-sm flex-fill">
          <div class="card-body">
            <h5 class="card-title"><%= experience.title %></h5>
            <p class="card-text"><%= truncate(experience.description, length: 100) %></p>
            <%= link_to "See more", experience_path(experience), class: "btn btn-primary btn-sm mt-2" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="text-center mt-3">
    <%= link_to "Show more experiences", experiences_path, class: "btn btn-outline-primary" %>
  </div>
</div>

<!-- REVIEWS -->
<div class="py-5">
  <div class="container">
    <h2 class="mb-4 text-center">What People Are Saying</h2>
    <div class="row justify-content-center">
      <% @reviews.each do |review| %>
        <div class="col-md-4 d-flex">
          <div class="card mb-4 shadow-sm flex-fill">
            <div class="card-body">
              <p class="card-text">"<%= truncate(review.content, length: 120) %>"</p>
              <!-- Agrega la puntuación aquí -->
              <p class="mb-1">⭐ <%= review.rating %> / 5</p>
              <p class="text-muted mb-0"><strong><%= review.user.email %></strong></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
